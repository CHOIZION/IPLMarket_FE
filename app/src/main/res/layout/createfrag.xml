<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/create_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="상품 등록"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:layout_margin="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:hint="상품명" />

                <TextView
                    android:id="@+id/len_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:hint="0/30"
                    android:layout_weight="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="가격"
                    android:digits="0123456789"
                    android:maxLength="8"/>

                <TextView
                    android:id="@+id/len_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:hint="0/8" />

                <TextView
                    android:id="@+id/create_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:hint="숫자만 입력이 가능합니다." />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/create_imageView1"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_menu_gallery"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/create_btn_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이미지 가져오기"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/create_imageView2"
                android:layout_width="300dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:srcCompat="@android:drawable/ic_menu_camera"
                android:layout_margin="10dp"/>

            <Button
                android:id="@+id/create_btn_camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VR 카메라"
                android:layout_gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_ex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="상세설명"
                    android:maxLength="300"
                    />

                <TextView
                    android:id="@+id/len_ex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:hint="0/300"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/create_btn_enroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등록하기"
                android:layout_margin="20dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>